<%- include('partials/header.ejs') %>
    <img src="<%= imgURL  %>" alt="book cover" height="50">
    <h1><%= book %></h1>
    <h2><%= title %></h2>
    <p>On page: <%= page  %></p>
    <h2>Note</h2>
    <p><%= note  %></p>
    <button id="editNote" onclick="">
        Edit this note.
    </button>
    <!-- edit note form -->
    <form action="/note/edit" method="POST" style="display: none;">
        <input type="hidden" name="id" value="<%= id %>">
        <label for="title">Title:</label>
        <input type="text" name="title" value="<%= title %>">
        <label for="page">Page:</label>
        <input type="number" name="page" value="<%= page %>" step="1">
        <label for="note">Note:</label>
        <textarea name="note">
            <%= note %>
        </textarea>
        <input type="submit" value="Edit This note">
    </form>
<%- include('partials/footer.ejs') %>