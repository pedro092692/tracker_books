<%- include('partials/header.ejs') %>
<section class="notes_in_book">
    <h1><%= title %></h1>
    <div class="book_note_cover">
        <img src="<%= imgURL  %>" alt="book cover" height="240">
        <h2><%= book %></h2>
    </div>
    <div id="noteInfo">
        <h2><%= title %></h2>
        <p>On page: <%= page  %></p>
        <h2>Note:</h2>
        <p class="note"><%= note  %></p>
        
        <button class="edit_note" onclick="editNote(true)">
            Edit this note.
        </button>
    </div>
    <button onclick="editNote(false)" id="leaveEdit" style="display: none;">
        Leave edit note
    </button>

    <!-- edit note form -->
    <form action="/note/edit" method="POST" id="editNoteForm" style="display: none;">
        <input type="hidden" name="id" value="<%= id %>">
        <label for="title">Title:</label>
        <input type="text" name="title" value="<%= title %>">
        <label for="page">Page:</label>
        <input type="number" name="page" value="<%= page %>" step="1">
        <label for="note">Note:</label>
        <textarea name="note"><%= note %></textarea>
        <input type="submit" value="Edit This note">
    </form>

    <!-- delete note form -->
    <form action="/book/note/delete" method="POST" id="deleteNoteForm" style="display: none;" onsubmit="alertDeleteBook(event, this, 'Are you sure to delete this note?')">
        <input type="hidden" name="id" value="<%= id %>">
        <input type="hidden" name="work_id" value="<%= workId.split('/')[2] %>">
        <input type="submit" value="Delete this note">
    </form>
</section>
<%- include('partials/footer.ejs') %>